<%= form_with(model: @base,local: true) do |f| %>
      <%= render 'shared/error_messages',object: @base%>
      <%= f.label "拠点番号", class: "label-#{yield(:class_text)}" %>
      <%= f.number_field :base_number, class: "form-control", min: 0, max: 100 %>
      <%= f.label "拠点名", class: "label-label-#{yield(:class_text)}" %>
      <%= f.text_field :base_name, class: "form-control" %>
      <%= f.label "拠点種類", class: "label-label-#{yield(:class_text)}" %>
      <%= f.select :information,{'出勤':"出勤", '退勤':"退勤"}, { include_blank: "選択して下さい"},{ class: "form-control input-md", required: true} %>
<div class = "post">
      <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-label-#{yield(:class_text)}" %>
</div>      
<% end %>